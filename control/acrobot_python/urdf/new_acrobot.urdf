<?xml version="1.0" ?>
<robot name="acrobot">

  <link name="link1">
    <inertial>
      <mass value="1.0" />
      <origin xyz="0.5 0 0" />
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
    <visual>
      <origin xyz="0.5 0 0" rpy="0 0 0" />
      <geometry>
        <box size="1.0 0.1 0.1" />
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0" />
      </material>
    </visual>
    <collision>
      <origin xyz="0.5 0 0" rpy="0 0 0" />
      <geometry>
        <box size="1.0 0.1 0.1" />
      </geometry>
    </collision>
  </link>

  <link name="link2">
    <inertial>
      <mass value="1.0" />
      <origin xyz="0.5 0 0" /> <!-- Offset along z-axis to avoid collision -->
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
    <visual>
      <origin xyz="0.5 0 0" rpy="0 0 0" /> <!-- Offset along z-axis to avoid collision -->
      <geometry>
        <box size="1.0 0.1 0.1" />
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0" />
      </material>
    </visual>
    <collision>
      <origin xyz="0.5 0 0" rpy="0 0 0" /> <!-- Offset along z-axis to avoid collision -->
      <geometry>
        <box size="1.0 0.1 0.1" />
      </geometry>
    </collision>
  </link>

  <link name="base_link">
    <inertial>
      <mass value="1.0" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.1 0.1 0.1" />
      </geometry>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.1 0.1 0.1" />
      </geometry>
    </collision>
  </link>

  <joint name="joint1" type="revolute">
    <parent link="link1" />
    <child link="link2" />
    <origin xyz="1.0 0 0" rpy="0 0 0" />
    <axis xyz="0 1 0" />
    <limit effort="100.0" velocity="1.0" /> 
    <dynamics damping="0" friction="0" />
  </joint>

  <!-- Added joints to connect links to the world -->
  <joint name="base_joint1" type="revolute">
    <parent link="base_link" />
    <child link="link1" />
    <origin xyz="0 0 0" rpy="0 0 0" />
    <axis xyz="0 1 0" />
    <limit effort="100.0" velocity="1.0" />
    <dynamics damping="0" friction="0" />
  </joint>

  <joint name="base_joint2" type="revolute">
    <parent link="base_link" />
    <child link="link2" />
    <origin xyz="1.0 0 0" rpy="0 0 0" />
    <axis xyz="0 1 0" />
    <limit effort="100.0" velocity="1.0" />
    <dynamics damping="0" friction="0" />
  </joint>

</robot>
